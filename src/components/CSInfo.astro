---
const { info } = Astro.props;
const {
    id,
    title,
    date,
    participation,
    format,
    num,
    place,
    shop,
    guest,
    distribution_image,
} = info;
import FormattedDate from "./FormattedDate.astro";
---

<h3 id={id}>{title}</h3>
<h4>大会情報</h4>
<ul>
    <li>開催日：<FormattedDate date={date} /></li>
    <li>参加形式：{participation}</li>
    <li>フォーマット：{format}</li>
    <li>定員：{num}人</li>
    <li>開催場所：{place}</li>
    <li>店舗/団体：{shop}</li>
    {
        guest && (
            <li>
                ゲスト：<b>{guest}</b>さん
            </li>
        )
    }
    {
        distribution_image && (
            <li>
                デッキ分布：
                <br />
                <img
                    src={`/results/${distribution_image}`}
                    alt={title + " デッキ分布"}
                    style="width: auto; height: auto;"
                />
            </li>
        )
    }
</ul>
